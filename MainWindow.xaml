<Window x:Class="LoanCalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кредитный калькулятор" Height="444" Width="350">

    <StackPanel Margin="20">
        
        <TextBlock Text="Кредитный калькулятор" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        
        <TextBlock Text="Сумма кредита:" 
                   Margin="0,0,0,5"/>
        <TextBox x:Name="AmountTextBox" 
                 Text="100000" 
                 FontSize="16"
                 Margin="0,0,0,10"/>

        
        <TextBlock Text="Срок (месяцев):" 
                   Margin="0,0,0,5"/>
        <TextBox x:Name="TermTextBox" 
                 Text="12" 
                 FontSize="16"
                 Margin="0,0,0,10"/>

        
        <TextBlock Text="Процентная ставка (% годовых):" 
                   Margin="0,0,0,5"/>
        <TextBox x:Name="RateTextBox" 
                 Text="10" 
                 FontSize="16"
                 Margin="0,0,0,20"/>

       
        <Button x:Name="CalculateButton" 
                Content="Рассчитать" 
                FontSize="16" 
                Padding="10" 
                Margin="0,0,0,20" 
                Click="CalculateButton_Click"/>
        <Border Background="#F0F0F0" Padding="10" CornerRadius="5" Height="74">
            <StackPanel>
                <TextBlock Text="Результаты:" 
                           FontWeight="Bold" 
                           FontSize="16"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Ежемесячный платеж:" 
                               Width="180"/>
                    <TextBlock x:Name="MonthlyPaymentText" 
                               FontWeight="Bold" 
                               Foreground="Blue"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Общая сумма:" 
                               Width="180"/>
                    <TextBlock x:Name="TotalPaymentText" 
                               FontWeight="Bold" 
                               Foreground="Blue"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Переплата:" 
                               Width="180"/>
                    <TextBlock x:Name="OverpaymentText" 
                               FontWeight="Bold" 
                               Foreground="Red"/>
                </StackPanel>
            </StackPanel>
        </Border>

        
    </StackPanel>
</Window>